<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_top_nav"
    android:layout_width="match_parent"
    android:layout_height="@dimen/detail_title_height"
    android:background="@color/white_color">

    <ImageView
        android:id="@+id/title_iv_left"
        android:layout_width="@dimen/detail_title_height"
        android:layout_height="match_parent"
        android:paddingLeft="11.5dp"
        android:paddingTop="11.5dp"
        android:paddingRight="18.5dp"
        android:paddingBottom="11.5dp"
        android:src="@drawable/ic_back_black" />

    <!--<TextView-->
    <!--android:id="@+id/tv_badge"-->
    <!--android:layout_width="12dp"-->
    <!--android:layout_height="12dp"-->
    <!--android:layout_alignTop="@id/title_iv_left"-->
    <!--android:layout_alignRight="@id/title_iv_left"-->
    <!--android:layout_marginTop="10dp"-->
    <!--android:layout_marginRight="8dp"-->
    <!--android:background="@drawable/bg_circle_red"-->
    <!--android:gravity="center"-->
    <!--android:textColor="@color/white"-->
    <!--android:textSize="8sp"-->
    <!--android:visibility="gone"-->
    <!--tools:text="99+"-->
    <!--tools:visibility="visible" />-->

    <TextView
        android:id="@+id/title_tv_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/title_iv_left"
        android:gravity="center_vertical"
        android:textSize="@dimen/title_other_text_size"
        android:visibility="gone"
        tools:hint="返回"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxWidth="280dp"
        android:maxLines="1"
        android:textColor="@color/news_main_title"
        android:textSize="@dimen/title_text_size" />

    <TextView
        android:id="@+id/title_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textSize="@dimen/title_other_text_size"
        android:visibility="gone"
        tools:hint="设置"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/title_iv_right"
        android:layout_width="@dimen/detail_title_height"
        android:layout_height="match_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toLeftOf="@id/title_tv_right"
        android:paddingLeft="8.5dp"
        android:paddingTop="10.5dp"
        android:paddingRight="11.5dp"
        android:paddingBottom="10.5dp"
        android:src="@drawable/ic_home_black"
        android:visibility="gone"
        tools:visibility="visible" />

    <View
        android:id="@+id/title_view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/theme_line_color" />

</RelativeLayout>
